    const finishTrial = () => {
      root.unmount();
      this.jsPsych.finishTrial();
    };

    root.render(
      React.createElement({{pascalCase name}}, {
        finishTrial,
        trial,
        jsPsych: this.jsPsych,
      })
    );
  }
}

export default {{pascalCase name}}Plugin;
